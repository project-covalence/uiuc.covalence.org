{
  "install": "pip3 install --user -r requirements.txt", 
  "start": "python3 manage.py runserver",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "^.trigger-install$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    },
    "throttle": 5000
  }
}
